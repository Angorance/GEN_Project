            <font>
                <Font size="29.0" />
            </font>
        </Label>
        <JFXButton fx:id="login" layoutX="279.0" layoutY="313.0" onAction="#loginButton" style="-fx-background-color: ed6a6a;" text="Se connecter" />
        <JFXButton fx:id="register" layoutX="272.0" layoutY="313.0" onAction="#registerButton" style="-fx-background-color: ed6a6a;" text="S'enregistrer" visible="false" />
    </children>
